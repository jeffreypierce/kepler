.dateselect
  text-align center
  &.input-on
    .dateselect__display
      display none
    .dateselect__inputs
      display block

  .dateselect__display
    transition color transition-speed ease-out
    cursor pointer
    &:hover
      color highlight-color

  .dateselect__inputs
    margin-top -2px
    display none
    transition border-color transition-speed ease-out
    &:hover
      border-color highlight-color

  .dateselect__input
    width 20px
    background-color transparent-black
    appearance none
    border none
    padding 0 2px

    color highlight-color
    text-align center
    &.year
      width 30px
    &:focus
      outline:none
    &::placeholder
      color default-color

  .button
    transition background-color transition-speed ease-out
    display inline-block
    color transparent-black
    width 18px
    height 18px
    line-height 20px
    margin-left 5px
    background-color muted-color
    text-align center
    cursor pointer
    border-radius 18px
    &:hover
      background-color highlight-color


  .today-reset
    margin-left 20px
    transition color transition-speed ease-out
    cursor pointer
    &:hover
      color highlight-color
