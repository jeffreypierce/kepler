bg-color = #111
highlight-color = #fff
default-color = #999
muted-color = #555
transparent-black = rgba(0,0,0,0.6)
transition-speed = 0.3s

@keyframes fadeInFromNone
  0%
    display none
    opacity 0
  1%
    display block
    opacity 0

  100%
    display block
    opacity 1

@import "partials/fonts"
@import "partials/mainmenu"
@import "partials/dateselect"
@import "partials/controls"
@import "partials/planet"

body
  overflow hidden
  user-select none
  background bg-color
  width 100%
  height 100%
  margin 0
  color highlight-color
  font-family "Yantramanav"
  font-weight 400
  font-size 13px

.container
  overflow hidden
  width 100%

.navbar
  background-color transparent-black
  position absolute
  z-index 200
  right 0
  left 0
  top 0
  bottom 100%
  padding 10px 0
  color default-color
  height 20px
  transition background-color transition-speed ease-out,
    bottom transition-speed ease-out,
    height transition-speed ease-out
  &.open
    bottom 0
    height 100%
    background-color rgba(0,0,0,0.8)

  &__left
    position: absolute
    left 0
    margin 0 10px
  &__center
    position: absolute
    left 50%
    transform translateX(-50%)
  &__right
    position: absolute
    right 0
    margin 0 10px

.solar-system
  position absolute
  top 50%
  left 50%
  transform translateY(-50%) translateX(-50%)
  width 1100px
  height 100%

.about
  padding 0 20px
  position absolute
  z-index 300
  top 40px
  display none
  left 0
  right 0
  bottom 0
  overflow-y auto

  &.open
    display block
    animation-duration 1s
    animation-name fadeInFromNone

  &__info
    font-size 18px
    line-height 27px
    margin 20px 20%
    font-weight 200
    @media (max-width: 920px)
      font-size 16px
      line-height 24px
      margin 20px 15%

    @media (max-width: 668px)
      font-size 14px
      line-height 21px
      margin 20px 10%

  &__link
    color default-color
    text-decoration none
    transition color transition-speed ease-out
    &:hover
      text-decoration underline
      color highlight-color
