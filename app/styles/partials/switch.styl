.controls
	text-align right
	font-size 14px

.audio-switch
	margin-right 55px

.switch
	visibility hidden
	margin 0 10px


.switch__title {
  position absolute
  top 1px
  left -40px
}

[for="animation"] .switch__title {
	left -66px
}

// background shape
.switch__label
	display inline-block
	position relative
	width 26px
	height 20px
	cursor pointer
	transition color 0.3s ease-out
	&:hover
		color #fff

// background color
.switch__label:after
	padding-left 8px
	position absolute
	background #555
	top 0
	left 0
	width 100%
	height 100%
	border-radius 20px
	content ''

.switch:checked + .switch__label:after {
	// background #5EBB47
  background #aaa
}

// knob
.switch__label:before
	content ''
	position absolute
	background #999
	top 2px
	left 2px
	z-index 2
	width 16px
	height 16px
	border-radius 16px

.switch:checked + .switch__label:before {
	left 16px
  background #fff
}

.switch__label:after, .switch__label:before
	transition background 0.3s ease-out, left 0.3s ease-out
