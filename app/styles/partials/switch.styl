.controls
	text-align right

.switch
	margin 0 0 0 8px

.switch__label
	position relative
	top -6px
	cursor pointer
	transition color transition-speed ease-out
	&:hover
		color #fff

// background shape
.switch__input
	margin 0 8px 0 4px
	appearance none
	display inline-block
	position relative
	width 26px
	height 20px
	cursor pointer
	&:focus
		outline none
	&:hover::before {
		background #fff
	}

// background color
.switch__input::after
	content ''
	padding-left 8px
	position absolute
	background #555
	top 0
	left 0
	width 100%
	height 100%
	border-radius 20px

.switch__input:checked::after {
  background #999
}

// knob
.switch__input::before
	content ''
	position absolute
	background #999
	top 2px
	left 2px
	z-index 2
	width 16px
	height 16px
	border-radius 16px

.switch__input:checked::before {
	left 16px
  background #fff
}

.switch__input:after, .switch__input:before
	transition background transition-speed ease-out, left transition-speed ease-out
