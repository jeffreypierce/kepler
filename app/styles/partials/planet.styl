orbit-width = 3px

mercury-size = 15px
mercury-orbit = 100px
mercury-color = #99897B

venus-size = 40px
venus-orbit = 200px
venus-color = #A34E00

earth-size = 40px
earth-orbit = 300px
earth-color = #46588A

mars-size = 20px
mars-orbit = 400px
mars-color = #952908

jupiter-size = 120px
jupiter-orbit = 750px
jupiter-color = #785E4A

saturn-size = 90px
saturn-orbit = 1000px
saturn-color = #72853C


planet(orbit, size, color)
  .orbit
    border-radius orbit
    width orbit
    height orbit

    @media (max-width: 920px)
      border-radius (orbit * 0.75)
      width (orbit * 0.75)
      height (orbit * 0.75)

    @media (max-width: 668px)
      border-radius (orbit * 0.5)
      width (orbit * 0.5)
      height (orbit * 0.5)

    border-color darken(color, 20)
    opacity 50
    &.info-on
      z-index 100
      pointer-events:none;
      .planet__info
        pointer-events:all;
        display block
        animation-duration 0.5s
        animation-name fadeInFromNone

  .body
    background-color color
    width size
    height size
    line-height size
    border-radius size
    top (size * -0.5) - orbit-width
    left (orbit * 0.5) - (size * 0.5)
    @media (max-width: 920px)
      width (size * 0.75)
      height (size * 0.75)
      line-height (size * 0.75)
      border-radius (size * 0.75)
      top ((size * 0.75) * -0.5) - orbit-width
      left ((orbit * 0.75) * 0.5) - ((size * 0.75) * 0.5)

    @media (max-width: 668px)
      width (size * 0.5)
      height (size * 0.5)
      line-height (size * 0.5)
      border-radius (size * 0.5)
      top ((size * 0.5) * -0.5) - orbit-width
      left ((orbit * 0.5) * 0.5) - ((size * 0.5) * 0.5)

    .planet__symbol
      font-size 17px
      padding-left size + orbit-width
      @media (max-width: 920px)
        font-size 14px
        padding-left (size * 0.75) + orbit-width
      @media (max-width: 668px)
        font-size 11px
        padding-left (size * 0.5) + orbit-width

.orbit
  position absolute
  margin auto
  top 0
  left 0
  right 0
  bottom 0
  border orbit-width solid bg-color
  backface-visibility hidden

.body
  position absolute
  border orbit-width solid bg-color
  backface-visibility hidden
  &:hover
    cursor pointer

.planet__symbol
  color default-color
  font-family 'StarFontSans'
  font-size 17px
  &:hover
    cursor pointer

.planet__info
  padding 20px 40px 30px
  width 200px
  background-color rgba(0,0,0,0.8)
  position absolute
  top -10px
  left -10px
  line-height 20px
  display none
  .planet__name
    text-transform capitalize
  dt, dd
    float left
  dt
    width 110px
    clear both
    color default-color

.mercury
  planet(mercury-orbit, mercury-size, mercury-color)
  .orbit
    z-index 10

.venus
  planet(venus-orbit, venus-size, venus-color)
  .orbit
    z-index 9

.earth
  planet(earth-orbit, earth-size, earth-color)
  .orbit
    z-index 8

.mars
  planet(mars-orbit, mars-size, mars-color)
  .orbit
    z-index 7

.jupiter
  planet(jupiter-orbit, jupiter-size, jupiter-color)
  .orbit
    z-index 6

.saturn
  planet(saturn-orbit, saturn-size, saturn-color)
  .orbit
    z-index 5
