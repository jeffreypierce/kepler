.slider
	position relative
	top -8px
	&.disabled
		.slider__input::-webkit-slider-thumb
			background-color muted-color
			cursor auto
			&:hover
				background-color muted-color

	&__input
		vertical-align middle
		margin 10px 8px
		appearance none
		background-color muted-color
		height 3px
		width 50px
		outline none

	&__input::-webkit-slider-thumb
		transition background-color transition-speed ease-out
		appearance none
		background-color default-color
		width 8px
		height 20px
		border 2px solid bg-colr
		&:hover
			cursor pointer
			background-color highlight-color

.more
	transition border-color transition-speed ease-out,
		transform transition-speed ease-out,
		top transition-speed ease-out

	height 8px
	width 8px
	border solid default-color
	border-width 2px 2px 0 0
	transform rotate(135deg)
	margin 0 0 0 5px
	display inline-block
	cursor pointer
	position relative
	top -9px
	&:hover
		border-color highlight-color


.controls
	text-align right

	&__small
		display none
	&__main
		display block
	@media (max-width: 920px)
		&__small
			display block
			&.show
				.more
					transform rotate(-45deg)
					top -5px
		&__main
			display none
			&.show
				background-color transparent-black
				margin 5px 0
				padding 10px 0 0 10px
				display block
				animation-name fadeInFromNone
				animation-duration transition-speed
				.switch
				.slider
					display block
					margin 0 0 10px 0


.switch
	position relative
	top -3px

	&__label
		position relative
		top -5px
		cursor pointer
		transition color transition-speed ease-out
		&:hover
			color highlight-color

	// background shape
	&__input
		appearance none
		position relative
		width 26px
		height 20px
		cursor pointer
		margin 0 12px 0 6px
		&:focus
			outline none
		&:hover::before {
			background highlight-color
		}

	// background color
	&__input::after
		content ''
		padding-left 8px
		position absolute
		background muted-color
		top 0
		left 0
		width 100%
		height 100%
		border-radius 20px

	&__input:checked::after {
	  background default-color
	}

	// knob
	&__input::before
		content ''
		position absolute
		background default-color
		top 2px
		left 2px
		z-index 2
		width 16px
		height 16px
		border-radius 16px

	&__input:checked::before {
		left 16px
	  background highlight-color
	}

	&__input:after
	&__input:before
		transition background transition-speed ease-out, left transition-speed ease-out
